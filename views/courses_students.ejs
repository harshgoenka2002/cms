<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses & Materials</title>
    <link rel="stylesheet" href="/stylesheets/courses.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/attendance.css">
</head>
<body>
  <div class="nav_bar">
    <a href="/" class="lin">
      <div class=" nav ">Home</div>
    </a>
    <a href="/attendance-login" class="lin">
      <div class="attendance nav ">Attendance</div>
    </a>
    <a href="/courses-and-materials" class="lin">
      <div class="courses nav ">Courses & Materials</div>
    </a>
    <a href="/circulars-login" class="lin" >
      <div class="circulars nav ">Circulars</div>
    </a>
    <a href="/time-table" class="lin" >
      <div class="timetable nav ">Time Table</div>
    </a>
    <a href="/event-calendar" class="lin">
      <div class="eventcalendars nav "> Event Calendar 
       </div>
    </a>
  </div>
 
    <div class="courses_content " id="cam">
        <div class="courses_container">
  
          <div class="msubject">
            <label for="subject">Select Subject:</label>
            <select id="subject" name="subject"> <!-- Added name attribute -->
              <option value="select" selected>Select</option>
              <% sub.forEach(subject => { %>
              <option value="<%= subject._id %>" ><%= subject.subject %></option>
              <% }) %>
            </select>
          </div>
          
          <div class="mcheck_type">
            <label for="mcheck1">Syllabus</label>
            <input type="checkbox" id="mcheck1" name="syllabus"> <!-- Added name attribute -->
            <label for="mcheck2">Previous Year</label>
            <input type="checkbox" id="mcheck2" name="previous_year"> <!-- Added name attribute -->
            <label for="mcheck3">Materials</label>
            <input type="checkbox" id="mcheck3" name="materials"> <!-- Added name attribute -->
          </div>
  
          <div class="pdf_container" id="pdf_container">
            PDFS
          </div>
  
          <!-- <div class="mbuttons"> -->

            <div id="admin-btn">
                <button id="admin_login_btn">Admin Login</button>
            </div>         
        </div>
      </div> 
            <script>
                document.getElementById("admin_login_btn").onclick = function() {
                    window.open("http://localhost:3000/courses-login", "_blank");
                };
            </script>
    <script src="/javascripts/courses.js"></script>
</body>
</html>